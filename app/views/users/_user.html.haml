.modal.fade{:id => "role-options-#{user.id}", :style => "display: none;"}
  .modal-dialog
    .modal-content
      = simple_form_for user, :url => user_path(user), :html => {:method => :put, :class => 'form-horizontal' } do |f|
        .modal-header
          %button.close{ type: 'button', data: { dismiss: 'modal' }, aria: { hidden: 'true' } } &times;
          %h3 Change Role
        .modal-body
          .marg-left-15px
            = f.input :roles, :collection => AppConfig.roles, :as => :check_boxes, :label_method => lambda {|r| r.titleize}, :label => false, checked: user.roles
        .modal-footer
          = f.submit "Change Role", :class => "btn btn-primary"
          = link_to 'Close', '#', class: 'btn', data: { dismiss: 'modal' }
