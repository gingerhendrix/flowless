.page-header
  = link_to new_flow_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Flow
  %h2 Listing flows

.table-responsive
  %table.table.table-hover.table-condensed
    %thead
      %tr
        %th Name
        %th Number of Fields
        %th Number of Items
        %th Actions

    %tbody
      - @flows.each do |flow|
        %tr
          %td
            = flow.name
          %td
            = flow.field_types.count
          %td
            = flow.items.count
          %td
            = link_to 'Show', flow_path(flow), :class => 'btn btn-xs btn-default'
            = link_to 'Edit', edit_flow_path(flow), :class => 'btn btn-xs btn-primary'
            = link_to 'Destroy', flow, :data => { confirm: 'Are you sure?' }, :method => :delete, :class => 'btn btn-xs btn-danger'
