= simple_form_for(@flow) do |f|
  = f.error_notification

  .form-inputs

    = f.input :name

    = f.simple_fields_for :field_types do |t|
      .panel.panel-default
        .panel-heading
          %h3.panel-title= t.object._type
        .panel-body
          = t.input :name

  .form-actions
    = f.button :submit
