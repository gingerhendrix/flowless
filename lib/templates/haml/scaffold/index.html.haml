.page-header
  = link_to new_<%= singular_table_name %>_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New <%= human_name %>
  %h2 Listing <%= plural_table_name %>

.table-responsive
  %table.table.table-hover.table-condensed
    %thead
      %tr
<% for attribute in attributes -%>
        %th <%= attribute.human_name %>
<% end -%>
        %th
        %th
        %th

    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
<% index = 0 -%>
<% for attribute in attributes -%>
<% index += 1 -%>

<% if index == 1 %>
          %td= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %>
<% else %>
          %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
<% end -%>
          %td
            = link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-xs btn-primary'
            = link_to 'Destroy', <%= singular_table_name %>, :data => { confirm: 'Are you sure?' }, :method => :delete, :class => 'btn btn-xs btn-danger'
